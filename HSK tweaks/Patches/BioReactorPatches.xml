<?xml version="1.0" encoding="utf-8" ?>
<Patch>


<Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName = "BioReactor" or defName = "BioReactorCircleLarge" or defName = "BioReactorCircleEX" or defName = "BioReactorBig" or defName = "BioReactorEx"]/costList/Steel</xpath>
</Operation>


<!-- 2X2 Size -->
<Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "BioReactor"]</xpath>
        <value>
			<stuffCategories>
				<li>Metallic</li>
			</stuffCategories>
			<costStuffCount>120</costStuffCount>
		</value>
</Operation>


