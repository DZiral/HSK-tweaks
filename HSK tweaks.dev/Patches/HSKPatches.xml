<?xml version="1.0" encoding="utf-8" ?>
<Patch>


<!-- /recipeMaker -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <success>Invert</success>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]</xpath>
      <value>
        <recipeMaker />
      </value>
    </li>
  </operations>
</Operation>


<!-- /recipeMaker/recipeUsers -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/recipeUsers</xpath>
      <success>Invert</success>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <recipeUsers />
      </value>
    </li>
  </operations>
</Operation>

<Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker/recipeUsers</xpath>
    <value>
        <li>HyperTailoringBench</li>
    </value>
</Operation>


<!-- /recipeMaker/skillRequirements -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/skillRequirements</xpath>
      <success>Invert</success>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <skillRequirements />
      </value>
    </li>
  </operations>
</Operation>

<!-- /recipeMaker/skillRequirements/Crafting -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/skillRequirements/Crafting</xpath>
      <success>Invert</success>
    </li>
	<li Class="PatchOperationAdd">
    	<xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker/skillRequirements</xpath>
	    <value>
    	    <Crafting>16</Crafting>
	    </value>
	</li>
  </operations>
</Operation>

<!-- /recipeMaker/unfinishedThingDef -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/unfinishedThingDef</xpath>
      <success>Invert</success>
    </li>
	<li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      </value>
    </li>
  </operations>
</Operation>

<!-- /recipeMaker/workSpeedStat -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/workSpeedStat</xpath>
      <success>Invert</success>
    </li>
	<li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <workSpeedStat>SmithingSpeed</workSpeedStat>
      </value>
    </li>
  </operations>
</Operation>

<!-- /recipeMaker/workSkill -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/workSkill</xpath>
      <success>Invert</success>
    </li>
	<li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <workSkill>Crafting</workSkill>
      </value>
    </li>
  </operations>
</Operation>

<!-- /recipeMaker/effectWorking -->
<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ThingDef[@Name = "ArmorSpacerSimpleBase"]/recipeMaker/effectWorking</xpath>
      <success>Invert</success>
    </li>
	<li Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/recipeMaker</xpath>
      <value>
        <effectWorking>Smith</effectWorking>
      </value>
    </li>
  </operations>
</Operation>




